<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--EDITED | for adding the agnecy field in the sale order table-->
        <record id="hr_contract_ext" model="ir.ui.view">
            <field name="name">hr_contract_ext</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='information']" position="after">
                    <page name="allowance_lines" string="Allowance Details">
                        <notebook>
                            <page string="Fixed Allowance Lines" name="fixed_allowance_lines">
                                <field name="fixed_allowance_lines" track_visibility='onchange'>
                                    <tree editable="top">
                                        <field name="name"/>
                                        <field name="description" />
                                        <field name="date_start" />
                                        <field name="date_end" />
                                        <field name="special_cases" />
                                        <field name="amount"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <notebook>
                            <page string="Fixed Deduction Lines" name="fixed_deduction_lines">
                                <field name="fixed_deduction_lines" track_visibility='onchange'>
                                    <tree editable="top">
                                        <field name="name"/>
                                        <field name="description" />
                                        <field name="date_start" />
                                        <field name="date_end" />
                                        <field name="special_cases" />
                                        <field name="amount"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
